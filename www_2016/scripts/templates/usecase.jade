.usecase
  a(href=Website)
    img(src=Website + 'favicon.ico')
    h1.textfill
      span= Title

  .countries
        each country in countries
           img(src=country.flagURI, title=country.name)
      
  .usecase-main
    .slogan.textfill
        span= Slogan

    h3 Description
    .description.textfill
        span!= locals['Long description']
    
  .usecase-right
    h3 Use Case category
    .domains
        img(src='img/usecases/'+ domain + '.jpg', title=locals['Use Case category'])

    h3 Tags
    .category.textfill
      each tag in tags
        span= tag

    h3 Website
    .website.textfill
        span= Website

